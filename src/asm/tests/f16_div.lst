04005C             0036*       push hl ; 4 cycles
04005C             0037*       ld hl,2 ; 4 cycles
04005C             0038*       add hl,sp ; 1 cycle
04005C             0039*       ld (hl),a ; 2 cycles
04005C             0040*       pop hl ; 4 cycles
04005C             0041*       ; 15 cycles total
04005C             0042*       ENDMACRO
